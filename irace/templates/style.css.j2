{% include "fork.css" %}
body {
  background-color: #eee;
  color: #000;
  margin: 0;
  padding-bottom: 0.25em;
  font-family: 'Roboto', sans-serif;
}
p {
  margin: 0;
  padding: 0;
}
.laps {
  background-color: #ddd;
  width: 400px;
  display: none;
  position: absolute;
  top: 158px;
  left: calc(50% - 200px);
  margin: 0 auto;
  border: 5px solid #444;
}
.laps>p {
  margin: 5px 0 10px;
  text-align: center;
  font-size: larger;
  font-weight: 600;
}
.hideX {
  position: absolute;
  width: 20px;
  top: 0px;
  left: calc(100% - 12px);
}
a {
  text-decoration: none;
}
h1 {
  font-weight: 600;
  text-align: center;
  min-height: 158px;
  line-height: 158px;
  margin: 0 0 0.25em;
  font-size: 16px;
  white-space: nowrap;
  word-wrap: normal;
}
@media screen and (min-width: 320px) {
  h1 {
    font-size: calc(16px + 6 * ((100vw - 320px) / 680));
  }
}
@media screen and (min-width: 1600px) {
  h1 {
    font-size: xx-large;
  }
}
h1, .bottomBorder {
  border-bottom: 2px solid #444;
}
.large {
  font-size: x-large;
}
.large>p {
  margin: 1em;
}
.small {
  font-size: small;
}
.center {
  text-align: center;
  margin: 0 auto;
}
.bottom {
  position: fixed;
  bottom: 0;
  width: 100%;
}
.fork-me {
  background-color: green;
}
td {
  font-family: 'Roboto Mono', monospace;
}
table:not(.lapdata) td:first-child,
table#results td:nth-child(5),
table.lapdata td:nth-child(3) {
  font-family: 'Roboto', sans-serif;
}
table:not(.lapdata) td:not(:first-child), table.lapdata td {
  text-align: center;
}
