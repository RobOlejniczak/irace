[MASTER]

jobs=4


[MESSAGES CONTROL]

disable=fixme,ungrouped-imports


[REPORTS]

# text, parseable, colorized, json or msvs (visual studio)
output-format=parseable
reports=yes
score=yes


[REFACTORING]

max-nested-blocks=5


[BASIC]

include-naming-hint=yes


[FORMAT]

expected-line-ending-format=LF
max-line-length=79


[MISCELLANEOUS]

notes=FIXME,XXX,TODO,HACK


[DESIGN]

min-public-methods=0


[IMPORTS]

allow-wildcard-with-all=no


[EXCEPTIONS]

# by default throws a warning for Exception
overgeneral-exceptions=
